<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp" 
    android:background="@color/bg_list"
    android:orientation="vertical">
    
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.1"
        android:orientation="vertical">
        
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
	        <EditText 
	            android:id="@+id/et_content_speech_menu"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textColor="@color/theme_text"
	            android:text="请点击麦克风说话"
	            android:hint="识别中.."
	            android:textSize="30sp"
	            android:layout_marginTop="10dp"
	            android:focusable="false"
	            android:background="@null"
	            android:gravity="center"/>
	        
	        <TextView android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textColor="@color/theme_text"
	            android:text="您可以这样说:"
	            android:layout_marginTop="30dp"
	            android:textSize="20sp"
	            android:gravity="center"/>
	        
	        <ScrollView android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_marginTop="10dp"
		        android:scrollbars="@null">
	        	<include layout="@layout/merge_speech_info1"/>
	    	</ScrollView>
	    </LinearLayout>
	    
	    <ScrollView 
            android:id="@+id/scrollView_info_speech_menu"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@color/theme_half_press" 
	        android:visibility="gone">
	    </ScrollView>
    </FrameLayout>
	<View style="@style/style_line_horizontal"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        
        <LinearLayout android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|bottom"
            android:paddingBottom="10dp">
            <ImageView 
            	    android:id="@+id/iv_info_speech_menu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ico_wenhao_normal"/>
        </LinearLayout>
        
        <RelativeLayout android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">
            
            <ImageView 
                android:id="@+id/iv_voice_speech_menu"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/selector_speech"
                android:layout_centerInParent="true"/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_voice_speech_menu"
                style="@style/style_text_info"
                android:gravity="center_horizontal"
                android:text="点击说话"/>
        </RelativeLayout>
        
        
        <LinearLayout android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" 
            android:gravity="right|bottom"
            android:paddingBottom="10dp">
            	<ImageView 
            	    android:id="@+id/iv_cancel_speech_menu"
            	    android:layout_width="35dp"
	                android:layout_height="35dp"
	                android:src="@drawable/ico_x_normal"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
