<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#FFFFFF">

	<LinearLayout android:layout_marginTop="5dip"
		android:paddingLeft="5dip" android:paddingRight="5dip"
		android:gravity="center_horizontal" android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

		<Button style="@style/button_style2" android:text="返回上级分类"
			android:textColor="@color/white" android:layout_width="100dip"
			android:background="#1999da" android:id="@+id/buttonCancel_C" />

	</LinearLayout>

    <com.cedarhd.control.listview.PullToRefreshListView
	    android:layout_height="fill_parent" android:id="@+id/listView1"
		android:fadingEdge="none" android:layout_width="fill_parent"
		android:divider="#ebebeb" android:dividerHeight="1px"></com.cedarhd.control.listview.PullToRefreshListView>

</LinearLayout>  
