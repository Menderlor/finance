<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zl_back"
    android:orientation="vertical"
    tools:context=".ClientConstractListActivity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/nav_height"
        android:background="@drawable/nav"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageViewCancel_test_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:padding="5dip"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title_test_list"
            style="@style/title_common"
            android:text="测量记录" />

        <ImageView
            android:id="@+id/imageViewNew_test_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:padding="5dip"
            android:src="@drawable/new_item" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="@color/lightgray" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <com.cedarhd.control.MyProgressBar
            android:id="@+id/progress_test_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <com.cedarhd.control.listview.PullToRefreshListView
            android:id="@+id/listView_test_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#ebebeb"
            android:dividerHeight="1dp"
            android:fadingEdge="none"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>