<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root_weektask"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_list"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scolllayout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_save_tasktablist"
        android:background="@drawable/business_hall_selector_normall"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp" >

            <LinearLayout
                android:id="@+id/ll_monday_root_weektask"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp" >

                <!-- 任务简略 -->
            </LinearLayout>

            <!-- 星期二 -->

            <LinearLayout
                android:id="@+id/ll_tuesday_root_weektask"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp" >
            </LinearLayout>
            <!-- 星期三 -->

            <LinearLayout
                android:id="@+id/ll_wednesday_root_weektask"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp" >
            </LinearLayout>
            <!-- 星期四 -->

            <LinearLayout
                android:id="@+id/ll_thursday_root_weektask"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp" >
            </LinearLayout>

            <!-- 星期五 -->

            <LinearLayout
                android:id="@+id/ll_friday_root_weektask"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp" >
            </LinearLayout>

            <!-- 星期六 -->
            <LinearLayout
                android:id="@+id/ll_saturday_root_weektask"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp" >
            </LinearLayout>

            <!-- 星期天 -->

            <LinearLayout
                android:id="@+id/ll_sunday_root_weektask"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:visibility="gone" >

                <Button
                    android:id="@+id/btn_postpone_weektask"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/selector_button_blue"
                    android:text="延期任务"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_save_tasktablist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <ImageView
            android:id="@+id/iv_talking_weektasklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/selector_taking_btn" />

        <EditText
            android:id="@+id/et_content_weektasklist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:hint="给自己发条任务.."
            android:layout_toLeftOf="@+id/iv_save_weektasklist"
            android:layout_toRightOf="@+id/iv_talking_weektasklist"
            android:background="@drawable/shape_edittext_bg_yusheng"
            android:padding="5dp" />

        <ImageView
            android:id="@+id/iv_save_weektasklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_create_btn" />
    </RelativeLayout>

</RelativeLayout>