<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:paddingLeft="10dip" android:paddingRight="10dip"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="horizontal" android:background="#FFFFFF"
	android:descendantFocusability="blocksDescendants">

	<RelativeLayout android:layout_centerVertical="true"
		android:layout_centerHorizontal="true" android:layout_height="wrap_content"
		android:layout_width="fill_parent">

		<TextView android:layout_marginTop="10dip"
			android:layout_marginBottom="10dip" style="@style/textview_title"
			android:textSize="20sp" android:id="@+id/textView1"
			android:layout_height="wrap_content" android:text=""
			android:layout_width="wrap_content" android:layout_centerVertical="true"
			android:layout_alignParentLeft="true" />

		<Button style="@style/button_style2" android:layout_marginTop="10dip"
			android:layout_marginBottom="10dip" android:text="子部门"
			android:textColor="@color/white" android:layout_width="70dip"
			android:layout_height="35dip" android:background="#ff8604"
			android:id="@+id/button1" android:layout_marginRight="5dip"
			android:layout_centerVertical="true" android:layout_toLeftOf="@+id/button2"/>

		<Button style="@style/button_style2" android:layout_marginTop="10dip"
			android:layout_marginBottom="10dip" android:text="选择"
			android:textColor="@color/white" android:layout_width="70dip"
			android:layout_height="35dip" android:background="#1999da"
			android:id="@+id/button2" android:layout_marginRight="5dip"
			android:layout_centerVertical="true" android:layout_alignParentRight="true" />
	</RelativeLayout>

</LinearLayout>  