<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >
        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:id="@+id/iv_avartar_work_plan"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:scaleType="fitXY"
            android:src="@drawable/tx"
            app:siShape="@drawable/shape_rounded_rectangle"
            app:siSquare="true" />
        <TextView 
            android:id="@+id/tv_user_name_work_plan"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/text_black"
            android:layout_gravity="center_vertical"
            android:text="姓名"/>
        
        
        <LinearLayout android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="right">
            <TextView android:layout_width="wrap_content"
            	android:id="@+id/tv_date_name_work_plan"
                android:layout_height="wrap_content"
                android:text="2015-10-10"
            	android:layout_gravity="right"
            	android:padding="5dp"
            	android:textSize="12sp"
            	android:textColor="@color/gray"/>
        </LinearLayout>
    </LinearLayout>
    <View style="@style/style_line_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <com.cedarhd.control.listview.BoeryunNoScrollListView
            android:id="@+id/lv_custom_work_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="@dimen/height_line"
            android:divider="@color/line_splite"
            />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/bg_list"
        android:orientation="vertical" >
        
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/style_text_info"
            android:text="总结"/>
        <EditText 
            android:id="@+id/et_summary_custom_work_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:focusable="false"
            android:padding="5dp"
            android:textSize="13sp"
            android:textColor="@color/text_black"
            android:hint="总结"/>
    </LinearLayout>

    
</LinearLayout>