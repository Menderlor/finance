<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout style="@style/task_style_ll_info" >

        <TextView
            style="@style/style_text_left_info"
            android:text="客户" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/et_client_add_salechance"
                style="@style/style_text_right_info" 
                android:focusable="false"/>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/style_line_horizontal" />

    <LinearLayout style="@style/task_style_ll_info" >

        <TextView
            style="@style/style_text_left_info"
            android:text="意向产品" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/et_product_add_salechance"
                style="@style/style_text_right_info" 
                android:focusable="false"/>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/style_line_horizontal" />

    <LinearLayout style="@style/task_style_ll_info" >

        <TextView
            style="@style/style_text_left_info"
            android:text="报价" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/et_price_add_salechance"
                style="@style/style_text_right_info"
                android:inputType="number" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/style_line_horizontal" />

    <LinearLayout
        style="@style/task_style_ll_info"
        android:minHeight="100dp" >

        <TextView
            style="@style/style_text_left_info"
            android:text="商机" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/et_content_add_salechance"
                style="@style/style_text_right_info"
                android:minHeight="100dp" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/style_line_horizontal" />

</LinearLayout>