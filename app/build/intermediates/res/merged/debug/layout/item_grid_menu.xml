<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/rl_root_grid_item_rl"
        style="@style/style_menu_grid_item_rl"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/iv_ico_grid_item"
            style="@style/style_menu_grid_item_iv"
            android:src="@drawable/a_icon5" />

        <TextView
            android:id="@+id/tv_title_grid_item"
            style="@style/style_menu_grid_item_text"
            android:layout_below="@+id/iv_ico_grid_item"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:text="模块" />

        <TextView
            android:id="@+id/tv_count_grid_item"
            style="@style/style_menu_badge_textview"
            android:layout_marginRight="10dp"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>