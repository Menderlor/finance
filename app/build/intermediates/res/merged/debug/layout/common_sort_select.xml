<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
	android:minWidth="280dip" android:minHeight="300dip"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#FFFFFF">

	<LinearLayout android:layout_marginTop="5dip" android:layout_marginBottom="5dip"
		android:paddingLeft="5dip" android:paddingRight="5dip"
		android:gravity="center_horizontal" android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

		<Button style="@style/button_style2" android:text="返回上级分类" android:textColor="@color/white"
			android:layout_width="100dip" 
			android:background="#555555" android:id="@+id/buttonCancel_C" />

	</LinearLayout>

	<FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        
        <ProgressBar 
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <com.cedarhd.control.listview.PullToRefreshListView
            android:id="@+id/listView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="#ebebeb"
            android:dividerHeight="1dp"
            android:fadingEdge="none"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>  
