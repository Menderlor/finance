<?xml version="1.0" encoding="utf-8"?>
<!-- 通知详情的布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zl_back"
    android:orientation="vertical" >

    <RelativeLayout style="@style/style_header_layout" >
        <ImageView
            android:id="@+id/imageViewCancel2"
            style="@style/style_header_button" 
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_notice_info_title2"
            style="@style/title_common"
            android:text="通知详情" />

        <ImageView
            android:id="@+id/imageViewDone2"
            style="@style/style_header_button" 
            android:layout_alignParentRight="true"
            android:src="@drawable/check" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/lightgray" />

    <ProgressBar
        android:id="@+id/progressbar_addnotice2"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/scrollView_content_notice2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:scrollbarStyle="outsideOverlay" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/zl_back"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" >

                <LinearLayout
                    android:id="@+id/ll_title_notice_info2"
                    style="@style/task_style_ll_info" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/text_style_info"
                            android:text="标题" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/editTextTitle2"
                        style="@style/task_style_edit_info"
                        android:layout_weight="3" />
                </LinearLayout>

                <View
                    android:id="@+id/view_line_id"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:id="@+id/ll_publiser2"
                    style="@style/task_style_ll_info" >

                    <TextView
                        style="@style/text_style_info"
                        android:text="发布人" />

                    <EditText
                        android:id="@+id/editTextPublisher2"
                        style="@style/task_style_edit_info"
                        android:layout_weight="3" />
                </LinearLayout>

                <View
                    android:id="@+id/view_personel_notic_info_new2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:id="@+id/ll_receiver_notice_info2"
                    style="@style/task_style_ll_info" >

                    <TextView
                        style="@style/text_style_info"
                        android:text="接收人" />

                    <EditText
                        android:id="@+id/editTextReceiverName2"
                        style="@style/task_style_edit_info"
                        android:layout_weight="3" />
                </LinearLayout>

                <View
                    android:id="@+id/view_publish_time_notic_info_new2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:id="@+id/ll_publish_time_notic_info_new2"
                    style="@style/task_style_ll_info" >

                    <TextView
                        style="@style/text_style_info"
                        android:text="发布时间" />

                    <EditText
                        android:id="@+id/showdateExpirationTime2"
                        style="@style/task_style_edit_info"
                        android:layout_weight="3" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:id="@+id/ll_content_notice_info2"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:paddingTop="8dp" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/text_style_info"
                            android:text="内容" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/editTextContent2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@null"
                        android:gravity="top"
                        android:minHeight="50dp"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_speech2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp" >

                    <ImageView
                        android:id="@+id/iv_keybord2_noticeinfo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:src="@drawable/chatting_keyboard_btn_normal" />

                    <Button
                        android:id="@+id/btn_speek2_noticeinfo2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3"
                        android:background="@drawable/chatting_btn_bg"
                        android:text="点击说话" />
                </LinearLayout>
            </LinearLayout>

            <com.cedarhd.control.HorizontalScrollViewAddImage
                android:id="@+id/addImg_noticeinfo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" ></com.cedarhd.control.HorizontalScrollViewAddImage>

          

            <LinearLayout
                android:id="@+id/ll_attchment"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/white"
                android:orientation="vertical"
                >

                <ListView
                    android:id="@+id/lv_attchment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:divider="@color/lightgray"
                    android:dividerHeight="0.5dp"
                    android:padding="8dp" >
                </ListView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>