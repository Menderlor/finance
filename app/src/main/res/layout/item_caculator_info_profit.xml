<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@color/white"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_item_profit_info_qici"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:gravity="center"
        android:text=""
        android:textColor="@color/text_black"
        android:textSize="12sp" />
    
    <TextView
        android:id="@+id/tv_item_profit_info_zhixiri"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:gravity="center"
        android:text=""
        android:textColor="@color/text_black"
        android:textSize="12sp" />
    
    <TextView
        android:id="@+id/tv_item_profit_info_fuxi_tianshu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text=""
        android:textColor="@color/text_black"
        android:textSize="12sp" />
    
    <TextView
        android:id="@+id/tv_item_profit_info_fuxi_jine"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text=""
        android:textColor="@color/text_black"
        android:textSize="12sp" />
    
    <TextView
        android:id="@+id/tv_item_profit_info_benjin_fanhuan"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text=""
        android:textColor="@color/text_black"
        android:textSize="12sp" />
    
    <TextView
        android:id="@+id/tv_item_profit_info_heji"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text=""
        android:textColor="@color/text_black"
        android:textSize="12sp" />

</LinearLayout>