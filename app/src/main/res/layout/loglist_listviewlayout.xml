<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        style="@style/style_list_item"
        android:orientation="horizontal"
        android:weightSum="1000" >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="48"
            android:gravity="center" >

            <!-- 已读未读小红点 -->
            <ImageView
                android:id="@+id/iv_dot_read_loglist"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ico_dot_read" />
        </LinearLayout>

        <RelativeLayout
            style="@style/style_list_avatar_root"
            android:layout_weight="240" >

            <com.cedarhd.control.AvartarView
                android:id="@+id/worklog_avatar"
                style="@style/style_list_avatar" />
            <TextView
                    android:id="@+id/tv_dept_work_log"
                    style="@style/style_list_content_text"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/worklog_avatar"
                    android:layout_height="wrap_content"/>
            
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="640"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_content_loglist"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5" >

                <TextView
                    android:id="@+id/textViewContent"
                    style="@style/style_list_content_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="3"
                    android:minLines="2"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical" >
                <ImageView
                    android:id="@+id/iv_clock"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/clock" />

                <TextView
                    android:id="@+id/textViewTime"
                    style="@style/style_list_content_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/iv_clock" />

                <TextView
                    android:id="@+id/DiscussCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:text="1"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    android:textStyle="bold" 
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="72"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/notice_icon01" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>