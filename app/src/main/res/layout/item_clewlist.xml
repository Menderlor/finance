<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <LinearLayout
    	style="@style/style_list_item"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" 
        android:weightSum="1000">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="928"
            android:orientation="vertical" >
             <TextView
		        android:id="@+id/tv_client_clewlist_item"
		        style="@style/style_list_title_text"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" 
		        android:text="客户"/>
			<LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
			    <TextView 
			        android:id="@+id/tv_product_clewlist_item"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@style/style_text_info"
			        android:text="联系人 "/>
			    <TextView 
			        android:id="@+id/tv_contacts_clewlist_item"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@style/style_text_info"
			        android:text="联系人"/>
			    
			    <TextView 
			        android:id="@+id/tv_phone_clewlist_item"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        style="@style/style_text_info"
			        android:gravity="right"
			        android:paddingRight="5dp"
			        android:text="联系电话"/>
			    
			</LinearLayout>

            <LinearLayout
                android:id="@+id/rl_time_noticelist"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center_vertical" 
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_clock"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/clock" />
                <TextView
                    android:id="@+id/tv_time_item_clewlist"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                	style="@style/style_text_info"
                	android:text="2015-10-01"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="72"
            android:layout_height="fill_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/notice_icon01" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>