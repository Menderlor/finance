<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_list" >

    <RelativeLayout
        android:id="@+id/rl_title_tasklistnew"
        style="@style/style_header_layout" >

        <ImageView
            android:id="@+id/imageViewCancel_tasklist"
            style="@style/style_header_button"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title"
            style="@style/title_common"
            android:text="任务" />

        <ImageView
            android:id="@+id/imageViewNew_tasklist"
            style="@style/style_header_button"
            android:layout_alignParentRight="true"
            android:src="@drawable/new_item" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_main_tasklistnew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_filter_tab"
        android:layout_below="@+id/rl_title_tasklistnew" >

        <RelativeLayout
            android:id="@+id/rl_search_tasklist"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" >

            <com.cedarhd.control.BoeryunSearchView
                android:id="@+id/searchview_tasklist"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <FrameLayout style="@style/style_listview_root"
            android:layout_below="@+id/rl_search_tasklist" >

            <com.cedarhd.control.listview.PullToRefreshListView
                android:id="@+id/listView_tasklist"
                style="@style/style_listview"
                android:visibility="gone" />

            <com.cedarhd.control.MyProgressBar
                android:id="@+id/progress_tasklist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/rl_week_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/lightgray"
            android:visibility="gone" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_month_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@color/black"
            android:visibility="gone" >
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/ll_filter_tab"
        android:background="@color/lightgray" />

    <LinearLayout
        android:id="@+id/ll_filter_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/red"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_week_calendar"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="周历"
            android:textColor="@color/zl_title"
            android:textSize="20sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/lightgray" />

        <TextView
            android:id="@+id/tv_filter_tasklist"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="过滤"
            android:textColor="@color/zl_title"
            android:textSize="20sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/lightgray" />

        <TextView
            android:id="@+id/tv_month_tasklist"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="月历"
            android:textColor="@color/zl_title"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>