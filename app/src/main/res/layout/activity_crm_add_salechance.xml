<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_add_sale_chance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    <RelativeLayout style="@style/style_header_layout" >
        <ImageView
            android:id="@+id/iv_back_add_salechance"
            style="@style/style_header_button"
            android:src="@drawable/back" />

        <TextView
            style="@style/title_common"
            android:text="新建销售机会"/>

        <ImageView
            android:id="@+id/iv_save_add_salechance"
            style="@style/style_header_button"
            android:layout_alignParentRight="true"
            android:src="@drawable/check" />
    </RelativeLayout>
    
    <RadioGroup 
        android:id="@+id/rgroup_add_salechance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone">
        <RadioButton android:id="@+id/rb_old_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="老客户"
            android:checked="true"
            android:textColor="@color/text_info"/>
        
        <RadioButton 
            android:id="@+id/rb_new_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="新客户"
            android:textColor="@color/text_info"/>
    </RadioGroup>

    <View style="@style/style_line_horizontal"/>
    <LinearLayout 
        android:id="@+id/ll_root_add_salechance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>
</LinearLayout>
