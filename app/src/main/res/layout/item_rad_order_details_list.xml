<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="@color/white"
    android:padding="8dp">
    
	<LinearLayout 
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center"
	    android:layout_weight="1">
	    
	    <ImageView 
	        android:id="@+id/iv_delete_rad_order_item"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/ico_rad_product"/>
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="2.2"
	    android:orientation="horizontal"
	    android:padding="8dp">
	    <TextView 
	        android:id="@+id/tv_name_rad_orderdetails_item"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/style_text_info"
	    	android:layout_gravity="center"
	    	android:text="产品名称"/>
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:padding="8dp"
	    android:orientation="vertical">
	    
	    <TextView 
	        android:id="@+id/tv_price_rad_orderdetails_item"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:textColor="@color/text_black"
	        android:textSize="14sp"
	    	android:gravity="right"
	    	android:text="￥19.00"/>
	    
	    <TextView 
	        android:id="@+id/tv_num_rad_orderdetails_item"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="10sp"
	        android:textColor="@color/text_info"
	    	android:gravity="right"
	    	android:text="x1"/>
	</LinearLayout>
</LinearLayout>
