<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_list"
    android:orientation="vertical"
    tools:context=".ClientConstractListActivity" >

    <RelativeLayout style="@style/style_header_layout" >

        <ImageView
            android:id="@+id/imageViewCancel_sale_chance"
            style="@style/style_header_button"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title_sale_chance"
            style="@style/title_common"
            android:text="销售机会" />

        <ImageView
            android:id="@+id/imageViewNew_sale_chance"
            style="@style/style_header_button"
            android:layout_alignParentRight="true"
            android:src="@drawable/new_item" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="@color/lightgray" />

    <FrameLayout
        style="@style/style_listview_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.cedarhd.control.listview.PullToRefreshListView
            android:id="@+id/listView_sale_chance"
            style="@style/style_listview" />

        <com.cedarhd.control.MyProgressBar
            android:id="@+id/progress_sale_chance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

</LinearLayout>