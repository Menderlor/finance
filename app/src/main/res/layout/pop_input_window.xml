<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/bg_list"
        android:minHeight="50dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <ImageView
            android:id="@+id/iv_talking_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/selector_taking_btn" />

        <EditText
            android:id="@+id/et_content_pop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:hint="评论一句吧..."
            android:focusable="true"
            android:layout_toLeftOf="@+id/iv_save_pop"
            android:layout_toRightOf="@+id/iv_talking_pop"
            android:background="@drawable/shape_edittext_bg_yusheng"
            android:padding="5dp" />

        <ImageView
            android:id="@+id/iv_save_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_create_btn" />
    </RelativeLayout>
