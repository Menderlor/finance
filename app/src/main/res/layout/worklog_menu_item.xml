<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	style="@style/style_menu_grid_item_rl" >
    <TextView
        android:id="@+id/textViewMemo"
        style="@style/style_menu_grid_item_text"
        android:layout_below="@+id/ivListWorkLog"
        android:text="日志" />

    <ImageView
        android:id="@+id/ivNewWorkLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/add" 
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ivListWorkLog"
        style="@style/style_menu_grid_item_iv"
        android:src="@drawable/a_icon3" />
    
    <TextView
        android:id="@+id/tvNewWorkLogCount"
        style="@style/style_menu_badge_textview"
        android:visibility="gone"/>

</RelativeLayout>