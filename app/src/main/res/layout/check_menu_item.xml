<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	style="@style/style_menu_grid_item_rl" >
    <TextView
        android:id="@+id/tvNewCheckCount_menu_item"
        style="@style/style_menu_badge_textview"
        android:visibility="gone"
       />

    <TextView
        android:id="@+id/tvCheck"
        style="@style/style_menu_grid_item_text"
		android:layout_below="@+id/ivListCheck"
        android:text="巡检"/>

    <ImageView
        android:id="@+id/ivNewCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/add" 
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ivListCheck"
		style="@style/style_menu_grid_item_iv"
        android:src="@drawable/tousu" />

</RelativeLayout>