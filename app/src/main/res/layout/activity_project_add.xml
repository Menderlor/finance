<?xml version="1.0" encoding="utf-8"?>
<!-- 通知详情的布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zl_back"
    android:orientation="vertical" >

    <RelativeLayout style="@style/style_header_layout" >

        <ImageView
            android:id="@+id/iv_back_project_add"
            style="@style/style_header_button"
            android:src="@drawable/back" />
        <TextView
            android:id="@+id/tv_project_add_title2"
            style="@style/title_common"
            android:text="新建项目" />
        <ImageView
            android:id="@+id/iv_save_project_add"
            style="@style/style_header_button"
            android:layout_alignParentRight="true"
            android:src="@drawable/check"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/lightgray" />
    <ProgressBar
        android:id="@+id/progressbar_addnotice2"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="8dp" >

        <LinearLayout
            style="@style/task_style_ll_info" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text_style_info"
                    android:text="名称" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_name_project_add"
                style="@style/task_style_edit_info"
                android:layout_weight="3" />
        </LinearLayout>

        <View
            android:id="@+id/view_line_id"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray" />

        <LinearLayout
            style="@style/task_style_ll_info" >

            <TextView
                style="@style/text_style_info"
                android:text="参与人" />

            <EditText
                android:id="@+id/et_participant_project_add"
                style="@style/task_style_edit_info"
                android:focusable="false"
                android:layout_weight="3" />
        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray" />

        <LinearLayout
            style="@style/task_style_ll_info" >

            <TextView
                style="@style/text_style_info"
                android:text="负责人" />

            <EditText
                android:id="@+id/et_header_project_add"
                style="@style/task_style_edit_info"
                android:focusable="false"
                android:layout_weight="3" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>