<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <!-- android:background="@color/zl_back" -->

        <RelativeLayout style="@style/style_header_layout" >

            <ImageView
                android:id="@+id/imageViewCancel_client"
                style="@style/style_header_button"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/tv_title_client_list"
                style="@style/title_common"
                android:text="选择项" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/lightgray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@color/bg_list"
            android:orientation="horizontal"
            android:padding="8dp" >

            <EditText
                android:id="@+id/et_input_dict"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <EditText
                android:id="@+id/et_search_dict"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/tv_cancle_select_dict"
                android:background="@color/white"
                android:hint="搜索"
                android:imeOptions="actionSearch"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_cancle_select_dict"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="取消"
                android:textColor="@color/theme_text"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="1dp" >

            <com.cedarhd.control.MyFlowLayout
                android:id="@+id/flow_layout_select_dict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp" />

            <View style="@style/style_line_horizontal" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ListView
                    android:id="@+id/lv_dict_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/line_splite"
                    style="@style/style_listview_normal"
                    android:listSelector="@drawable/selector_header_half"
                    android:dividerHeight="0.1dp" />

                <com.cedarhd.control.MyProgressBar
                    android:id="@+id/pbar_dict_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>