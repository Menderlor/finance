<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >
        <TextView 
            android:id="@+id/tv_client_name_work_plan_item"
            android:layout_width="0dp" 
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/text_black"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="客户"/>
        
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="right|center_vertical"
            android:paddingRight="10dp">
            <ImageView 
                android:id="@+id/iv_zhuizong_work_plan_item"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/grey_jiao"/>
            
            <ImageView
                android:id="@+id/iv_wenti_work_plan_item"
                 android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/grey_wt"/>
        </LinearLayout>
        
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right">
            <TextView android:layout_width="wrap_content"
            	android:id="@+id/tv_status_work_plan_item"
                android:layout_height="wrap_content"
            	android:layout_gravity="right"
			    android:text="10sp"
			    android:textColor="@color/white"
			    android:background="@drawable/shape_gray_layout"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical" >
        <LinearLayout
			android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/jihuaneirong"
                android:layout_gravity="center_vertical"/>
            <TextView 
                android:id="@+id/tv_content_work_plan_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:maxLines="2"
                android:textColor="@color/text_black"/>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/ll_wenti_work_plan_item"
			android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <ImageView 
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/redwenhao"
                android:layout_gravity="center_vertical"/>
            <TextView 
                android:id="@+id/tv_wenti_work_plan_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginLeft="5dp"
                android:text="问题"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_zhuizong_work_plan_item"
			android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <ImageView 
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/zhuizong"
                android:layout_gravity="center_vertical"/>
            <TextView 
                android:id="@+id/tv_zhuizong_work_plan_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginLeft="5dp"
                android:text="追踪..."
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_black"/>
        </LinearLayout>
        
        <LinearLayout
			android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <ImageView 
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ico_location"
                android:layout_gravity="center_vertical"/>
            <TextView 
                android:id="@+id/tv_address_work_plan_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginLeft="5dp"
                android:text="地点..."
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_black"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
