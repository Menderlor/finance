<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_createform"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/zl_back"
    android:orientation="vertical">

    <RelativeLayout style="@style/style_header_layout">

        <ImageView
            android:id="@+id/imageViewCancel"
            style="@style/style_header_button"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/textViewTitle"
            style="@style/title_common"
            android:text="表单页面" />

        <ImageView
            android:id="@+id/imageViewSave"
            style="@style/style_header_button"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_check" />

        <ProgressBar
            android:id="@+id/progressBar_showupload"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="4px"
        android:background="@color/lightgray" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.cedarhd.control.BoeryunVeticalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/create_root"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_info_bg"
                        android:orientation="vertical"
                        android:visibility="gone"></LinearLayout>

                    <WebView
                        android:id="@+id/webview_root"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"></WebView>

                    <com.cedarhd.control.MyProgressBar
                        android:id="@+id/pbar_createform"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_details_creatform"
                    style="@style/task_style_ll_info"
                    android:layout_height="70dp"
                    android:clickable="true"
                    android:padding="5dp"
                    android:visibility="gone">

                    <!-- 查看明细按钮 -->

                    <TextView
                        style="@style/style_edit_info_yusheng"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:gravity="center"
                        android:text="查看表单明细 "
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_root_details_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- 明细表显示区域 -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/ll_root_create_details_form"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_info_bg"
                            android:orientation="vertical"
                            android:visibility="gone"></LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_addDetails_creat_details_form"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:visibility="invisible">

                            <!-- 添加明细 -->

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/selector_create_btn" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_scan_creat_details_form"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:visibility="invisible">

                            <!-- 扫描明细 -->

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/topbar_search_gray" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_changeDetails_creat_details_form"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:padding="5dp"
                            android:visibility="gone">

                            <!-- 改变显示方式 -->

                            <TextView
                                style="@style/style_edit_info_yusheng"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:enabled="false"
                                android:gravity="center"
                                android:text="切换显示方式"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_deleteDetails_creat_details_form"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:padding="5dp"
                            android:visibility="gone">

                            <!-- 删除明细 -->

                            <TextView
                                style="@style/style_edit_info_yusheng"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:enabled="false"
                                android:gravity="center"
                                android:text="删除行"
                                android:textSize="18sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/create_photoroot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- 上传图片控件 -->

                    <com.cedarhd.control.HorizontalScrollViewAddImage
                        android:id="@+id/AddImage_createfrom_attachfilename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <com.cedarhd.control.MultipleAttachView
                        android:id="@+id/multipleAttachView_createform"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:numColumns="4"
                        android:padding="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_leader_signure_createform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_info_bg"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="gone">

                    <!-- 领导签名 -->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_web_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="用电脑网页的形式打开"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progress_add"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/create_approval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/darker_gray"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_info_bg"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <EditText
                            android:id="@+id/editText_approval_opinion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:editable="false"
                            android:ellipsize="end"
                            android:hint="请填写审核意见"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <Button
                            android:id="@+id/buttonTag_createfrom_approval"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_gravity="center_horizontal|center"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_button_blue"
                            android:gravity="center"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:text="通过"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/buttonTag_createfrom_votedown"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_gravity="center_horizontal|center"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_button_blue"
                            android:gravity="center"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:text="否决"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/buttonTag_createfrom_commit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/blue_button_selector"
                        android:gravity="center"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:text="保   存 "
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </com.cedarhd.control.BoeryunVeticalScrollView>
    </RelativeLayout>

</LinearLayout>