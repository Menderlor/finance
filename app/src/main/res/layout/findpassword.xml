<?xml version="1.0" encoding="utf-8"?>
<!-- 密码找回 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zl_back"
    android:orientation="vertical" >

    <RelativeLayout style="@style/style_header_layout" >

        <ImageView
            android:id="@+id/iv_back_findpassword"
            style="@style/style_header_button"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_findpassword_title"
            style="@style/title_common"
            android:text="找回密码" />

        <ImageView
            android:id="@+id/imageViewDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:padding="5dip"
            android:src="@drawable/check"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/lightgray" />

    <ProgressBar
        android:id="@+id/progressbar_addnotice"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/scrollView_content_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:scrollbarStyle="outsideOverlay" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/zl_back"
            android:orientation="vertical"
            android:gravity="center" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" >

                <LinearLayout
                    android:id="@+id/ll_findpassword_company"
                    style="@style/task_style_ll_info" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/text_style_info"
                            android:text="企业名称" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/editTextcompany"
                        style="@style/task_style_edit_info"
                        android:layout_weight="3" />
                </LinearLayout>

                <View
                    android:id="@+id/view_line_id"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:id="@+id/ll_findpassword_user"
                    style="@style/task_style_ll_info" >

                    <TextView
                        style="@style/text_style_info"
                        android:text="用户名称" />

                    <EditText
                        android:id="@+id/editTextuser"
                        style="@style/task_style_edit_info"
                        android:layout_weight="3" />
                </LinearLayout>

                <View
                    android:id="@+id/view_personel_findpassword_info_new"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:id="@+id/ll_email"
                    style="@style/task_style_ll_info" >

                    <TextView
                        style="@style/text_style_info"
                        android:text="注册邮箱" />

                    <EditText
                        android:id="@+id/editTextemail"
                        style="@style/task_style_edit_info"
                        android:layout_weight="3" />
                </LinearLayout>

                <View
                    android:id="@+id/view_publish_time_notic_info_new"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:id="@+id/ll_verification_code"
                    style="@style/task_style_ll_info" >

                    <TextView
                        style="@style/text_style_info"
                        android:text="验证码" />

                    <EditText
                        android:id="@+id/editTextcode"
                        style="@style/task_style_edit_info"
                        android:layout_weight="3" />
                </LinearLayout>

                <View
                    android:id="@+id/view_findpassword_code"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:id="@+id/ll_code"
                    style="@style/task_style_ll_info" >

                    <ImageView
                        android:id="@+id/iv_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/a_icon3" />

                    <TextView
                        android:id="@+id/tv_code"
                        style="@style/text_style_info"
                        android:clickable="true"
                        android:text="看不清，换一张" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_submit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/findpassword_submit"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        style="@style/style_button_blue"
                        android:background="@drawable/selector_button_blue"
                        android:text="提交" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>