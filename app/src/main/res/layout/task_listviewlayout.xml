<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/zl_back"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_state_tasklist"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/red" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dp"
            android:gravity="clip_vertical" >

            <TextView
                android:id="@+id/textViewTitle_tasklist"
                style="@style/textview_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Test"
                android:textSize="22sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|top"
                android:padding="10dp" >

                <com.cedarhd.control.AvartarView
                    android:id="@+id/control_avatar_tasklist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewState_tasklist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="状态："
                    android:textColor="#999999"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textViewPublishName_tasklist"
                    style="@style/textview_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布人"
                    android:textColor="@color/theme_title"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textViewContent_tasklist"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="content"
                    android:textColor="#999999"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textViewParticipant_tasklist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:text="参与人："
                    android:textColor="#999999"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/iv_clock"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/clock" />

                    <TextView
                        android:id="@+id/textViewTime_tasklist"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/iv_clock"
                        android:gravity="center_vertical"
                        android:text="发布日期"
                        android:textColor="#999999"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_state_tasklist1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/red" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView_tasklist"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/notice_icon01" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>