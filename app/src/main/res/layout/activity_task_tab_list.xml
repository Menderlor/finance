<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- android:background="@color/zl_back" -->

    <RelativeLayout style="@style/style_header_layout" >

        <ImageView
            android:id="@+id/iv_back_task_tab_list"
            style="@style/style_header_button"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_title_tabtasklist"
            style="@style/title_common"
            android:text="所有任务" />
        
        <ImageView
            android:id="@+id/iv_filter_task_tab_list"
            android:layout_toLeftOf="@+id/iv_new_task_tab_list"
            style="@style/style_header_button"
            android:src="@drawable/ico_filter"/>

        <ImageView
            android:id="@+id/iv_new_task_tab_list"
            android:layout_alignParentRight="true"
            style="@style/style_header_button"
            android:src="@drawable/new_item" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
            android:visibility="gone" >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
            <TextView
                android:id="@+id/tv_week_task_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="任务周历"
                android:textColor="@color/theme_text"
                android:textSize="16sp" />
            <View
                android:id="@+id/view_week_task_list"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:background="@color/theme_text"/>
            
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
            <TextView
                android:id="@+id/tv_tabtasklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="所有任务"
                android:textColor="@color/gray"
                android:textSize="16sp" />
            <View
                android:id="@+id/view_tabtasklist"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:background="@color/theme_text" 
                android:visibility="invisible"/>
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
            <TextView
                android:id="@+id/tv_post_tabtasklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="延期任务"
                android:textColor="@color/gray"
                android:textSize="16sp" />
            <View
                android:id="@+id/view_post_tabtasklist"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:background="@color/theme_text" 
                android:visibility="invisible"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/lightgray" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <com.cedarhd.control.BoeryunViewpager
            android:id="@+id/vp_tabtasklist"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </FrameLayout>

</LinearLayout>