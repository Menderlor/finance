<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zl_back"
    android:orientation="vertical"
    tools:context=".ClientConstractListActivity" >

    <RelativeLayout style="@style/style_header_layout" >
        <ImageView
            android:id="@+id/imageViewCancel_client_constracts"
            style="@style/style_header_button"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/title_client_constracts"
            style="@style/title_common"
            android:text="联系记录" />
        
        <ImageView
            android:id="@+id/iv_filter_client_constracts"
            android:layout_toLeftOf="@+id/imageViewNew_client_constracts"
            style="@style/style_header_button"
            android:src="@drawable/ic_filter"/>

        <ImageView
            android:id="@+id/imageViewNew_client_constracts"
            style="@style/style_header_button"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_add_menu" />
    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <com.cedarhd.control.BoeryunSearchView
            android:id="@+id/searchview_client_constracts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>  
    </RelativeLayout>
      
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        style="@style/style_listview_root">

        <com.cedarhd.control.listview.PullToRefreshListView
            android:id="@+id/listView_client_constracts"
            style="@style/style_listview"/>

        <com.cedarhd.control.MyProgressBar
            android:id="@+id/progress_client_constracts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

</LinearLayout>