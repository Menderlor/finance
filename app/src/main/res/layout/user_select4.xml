<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
	android:padding="3dip" android:minWidth="280dip" android:minHeight="300dip"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#FFFFFF">

	<LinearLayout android:paddingLeft="5dip"
		android:paddingRight="5dip" android:gravity="center_horizontal"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView android:textColor="@color/black"
			android:layout_gravity="center_vertical" android:textSize="15dip"
			android:text="当前部门：所有" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textViewSortName"
			android:layout_marginRight="5dip" />

		<Button style="@style/button_style2" android:text="切换"
			android:textColor="@color/white" android:layout_width="100dip"
			android:background="#1999da" android:id="@+id/buttonSelect_Sort" />

	</LinearLayout>

	<RelativeLayout android:layout_marginTop="5dip"
		android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:layout_weight="1" android:id="@+id/container2"
		android:orientation="vertical">

		<ListView android:layout_marginBottom="5dip" android:id="@+id/listView1"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_weight="1" android:fadingEdge="none" android:divider="#ebebeb"
			android:dividerHeight="1px" android:layout_alignParentTop="true">
		</ListView>

	</RelativeLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:layout_alignBottom="@+id/listView1">

		<Button style="@style/button_style1" android:text="确定"
			android:textColor="@color/white" android:layout_width="70dip"
			android:background="@color/ButtonBackgroundColor1" android:id="@+id/buttonSelect"
			android:layout_marginRight="5dip" />

		<!-- <Button style="@style/button_style1" android:text="查看所选" android:textColor="@color/white" 
			android:background="@color/ButtonBackgroundColor2" android:layout_width="70dip" 
			android:id="@+id/buttonViewSelect" android:layout_marginRight="5dip"/> -->

		<Button style="@style/button_style1" android:text="全选"
			android:textColor="@color/white" android:background="@color/ButtonBackgroundColor3"
			android:layout_width="70dip" android:id="@+id/buttonSelectAll"
			android:layout_marginRight="5dip" />

		<Button style="@style/button_style1" android:text="反选"
			android:textColor="@color/white" android:background="@color/ButtonBackgroundColor4"
			android:layout_width="70dip" android:id="@+id/buttonUnSelectAll" />

	</LinearLayout>

</LinearLayout>