<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:boeryun="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- android:background="@color/zl_back" -->

    <RelativeLayout style="@style/style_header_layout" >

        <ImageView
            android:id="@+id/imageViewCancel"
            style="@style/style_header_button"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_title_worklog_list"
            style="@style/title_common"
            android:text="工作日志" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/iv_filter_worklog_list"
                style="@style/style_header_button"
                android:src="@drawable/ico_filter" />
            <ImageView
                android:id="@+id/imageViewNew"
                style="@style/style_header_button"
                android:src="@drawable/new_item" />
        </LinearLayout>
    </RelativeLayout>

    <com.cedarhd.view.Indicator
        android:id="@+id/indicator_ch_log_info"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        boeryun:color_indicator="@color/theme_new" />

    <View style="@style/style_line_horizontal" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_worklog_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </android.support.v4.view.ViewPager>
    </FrameLayout>

</LinearLayout>