<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >
    <EditText 
        android:id="@+id/et_name_rad_add_client_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/style_edit_info_yusheng"
        android:textColor="@color/text_black"
        android:textColorHint="@color/lightgray"
        android:padding="5dp"
        android:hint="客户名称"/>
    
    <EditText android:id="@+id/et_address_rad_add_client_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/style_edit_info_yusheng"
        android:textColor="@color/text_black"
        android:textColorHint="@color/lightgray"
        android:padding="5dp"
        android:hint="送货地址"/>
    
    <EditText android:id="@+id/et_phone_rad_add_client_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/style_edit_info_yusheng"
        android:textColor="@color/text_black"
        android:textColorHint="@color/lightgray"
        android:padding="5dp"
        android:hint="联系电话"/>
    

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/tv_cancle_rad_add_client_dialog"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:textSize="18sp"
	        android:gravity="center"
	        android:textColor="@color/white"
	        android:background="@color/translate_half_black"
        	android:text="取消"/>
        
        <TextView 
            android:id="@+id/tv_save_rad_add_client_dialog"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:textSize="18sp"
	        android:gravity="center"
	        android:textColor="@color/white"
	        android:background="@color/color_shop_car_bg"
        	android:text="确定"/>
    </LinearLayout>
</LinearLayout>
