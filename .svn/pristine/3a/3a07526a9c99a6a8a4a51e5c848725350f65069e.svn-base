<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_menu_grid_item_rl">

    <TextView
        android:id="@+id/tvProductCount"
        style="@style/style_menu_badge_textview"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvProduct"
        style="@style/style_menu_grid_item_text"
        android:layout_below="@+id/ivListProducts"
        android:text="产品" />

    <ImageView
        android:id="@+id/ivNewProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/add" 
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ivListProducts"
		style="@style/style_menu_grid_item_iv" 
		android:src="@drawable/ico_product"/>

</RelativeLayout>
