<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/zl_back"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/nav_height"
        android:background="@drawable/nav"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/iv_cancel_testinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:padding="5dip"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_title_testinfo"
            style="@style/title_common"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:text="测量信息"/>

        <ImageView
            android:id="@+id/iv_submit_testinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:padding="5dip"
            android:src="@drawable/check" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pbar_test_info"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="@color/lightgray" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/zl_back"
            android:orientation="vertical"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:background="@drawable/shape_info_bg"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp" >

                <LinearLayout
                    android:id="@+id/ll_title_test_info"
                    style="@style/task_style_ll_info"
                    android:focusableInTouchMode="true" >

                    <TextView
                        style="@style/notice_style_text2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="时间" />

                    <EditText
                        android:id="@+id/tv_time_testinfo"
                        style="@style/task_style_edit_info"
                        android:layout_weight="3"
                        android:background="@null"
                        android:editable="false"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:id="@+id/ll_state_test_info"
                    style="@style/task_style_ll_info"
                    android:visibility="gone" >

                    <TextView
                        style="@style/notice_style_text2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="状态" />

                    <EditText
                        android:id="@+id/tv_state_testinfo"
                        style="@style/task_style_edit_info"
                        android:layout_weight="3"
                        android:background="@null" />
                </LinearLayout>

                <View
                    android:id="@+id/view_state_line"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray"
                    android:visibility="gone" />

                <LinearLayout style="@style/task_style_ll_info" >

                    <TextView
                        style="@style/notice_style_text2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="地点" />

                    <EditText
                        android:id="@+id/tv_address_testinfo"
                        style="@style/task_style_text_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:background="@null"
                        android:clickable="true"
                        android:textColor="@color/black" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray" />

                <LinearLayout style="@style/task_style_ll_info" >

                    <TextView
                        style="@style/notice_style_text2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="设计师" />

                    <EditText
                        android:id="@+id/tv_designer_testinfo"
                        style="@style/task_style_text_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:background="@null"
                        android:clickable="true"
                        android:textColor="@color/black" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray"
                    android:visibility="gone" />

                <LinearLayout
                    style="@style/task_style_ll_info"
                    android:visibility="gone" >

                    <TextView
                        style="@style/notice_style_text2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="测试类型" />

                    <EditText
                        android:id="@+id/tv_type_testinfo"
                        style="@style/task_style_text_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:background="@null"
                        android:clickable="true"
                        android:textColor="@color/black" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray" />

                <LinearLayout style="@style/task_style_ll_info" >

                    <TextView
                        style="@style/notice_style_text2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="制单人" />

                    <EditText
                        android:id="@+id/et_Staff_name_testinfo"
                        style="@style/task_style_edit_info"
                        android:layout_weight="3"
                        android:background="@null"
                        android:clickable="true"
                        android:editable="false" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="130dp"
                    android:orientation="horizontal" 
                    android:gravity="top">

                    <TextView
                        style="@style/notice_style_text2"
                        android:layout_width="0dp"
                        android:layout_marginTop="8dp"
                    android:layout_gravity="top"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="备注" />

                    <EditText
                        android:id="@+id/et_remark_testinfo"
                        style="?android:attr/textViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="125dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:background="@null"
                        android:clickable="true"
                        android:gravity="top"
                        android:hint=""
                        android:maxLines="10"
                        android:scrollbars="vertical"
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:textSize="17sp" />
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/ll_speek_test_new"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                <!-- 语音输入按钮 -->
                    <ImageView
                        android:id="@+id/iv_speek_test_new"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_weight="1"
                        android:src="@drawable/chatting_keyboard_btn_normal" />
                    <Button
                            android:id="@+id/btn_speek_test_new"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:background="@drawable/chatting_btn_bg"
                            android:text="点击说话" />
                </LinearLayout>
            </LinearLayout>

            <com.changhui.control.HorizontalScrollViewAddImage
                android:id="@+id/addImg_testinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >
            </com.changhui.control.HorizontalScrollViewAddImage>
        </LinearLayout>
    </ScrollView>

</LinearLayout>