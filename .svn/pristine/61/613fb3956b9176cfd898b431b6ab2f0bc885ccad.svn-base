<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white"
    android:padding="8dp">
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <TextView 
	        android:id="@+id/tv_visit_rad_report_item"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        style="@style/style_text_info"
	    	android:layout_gravity="center"
	    	android:text="进店"/>
	    
	    <TextView 
	        android:id="@+id/tv_ask_rad_report_item"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        style="@style/style_text_info"
	    	android:layout_gravity="center"
	    	android:text="咨询"/>
	    
	    <TextView 
	        android:id="@+id/tv_deal_rad_report_item"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        style="@style/style_text_info"
	    	android:layout_gravity="center"
	    	android:text="成交"/>
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="10dp">
	    
	    <TextView 
	        android:id="@+id/tv_user_rad_report_item"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:textColor="@color/text_black"
	        android:textSize="14sp"
	        android:gravity="left"
	    	android:text="刘莉莉"/>
	    
	    <ImageView android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:src="@drawable/ico_date"/>
	    
	    <TextView 
	        android:id="@+id/tv_time_rad_report_item"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="14sp"
	        android:textColor="@color/text_info"
	    	android:gravity="right"
	    	android:text="2015-12-01"/>
	</LinearLayout>
</LinearLayout>
