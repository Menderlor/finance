<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#FFFFFF">


	<LinearLayout android:paddingLeft="5dip" android:paddingRight="5dip" android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="30dip">

		<ImageView style="@style/email_style_bullets1" />

        <TextView
            style="@style/email_style_text1"
            android:id="@+id/id2"
			android:layout_height="wrap_content" android:text="状    态："
			android:layout_width="65dip" />

		<TextView style="@style/email_style_text2" android:text=""
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:id="@+id/textViewStatus" />

	</LinearLayout>

    <LinearLayout
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:orientation="horizontal"
        android:id="@+id/absoluteLayout12"
		android:layout_width="fill_parent" android:layout_height="30dip">

		<ImageView style="@style/email_style_bullets1" />

        <TextView
            style="@style/email_style_text1"
            android:id="@+id/id1"
			android:layout_height="wrap_content" android:text="名    称："
			android:layout_width="65dip" />

		<TextView style="@style/email_style_text2" android:text=""
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:id="@+id/textViewName" />
	</LinearLayout>

    <LinearLayout
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:orientation="horizontal"
        android:id="@+id/absoluteLayout14"
		android:layout_width="fill_parent" android:layout_height="30dip">

		<ImageView style="@style/email_style_bullets1" />

        <TextView
            style="@style/email_style_text1"
            android:id="@+id/id3"
			android:layout_height="wrap_content" android:text="创建人："
			android:layout_width="65dip" />

		<TextView style="@style/email_style_text2" android:text=""
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:id="@+id/textViewCreateName" />
	</LinearLayout>

	<LinearLayout android:paddingLeft="5dip" android:paddingRight="5dip"  android:orientation="horizontal" android:id="@+id/absoluteLayout1"
		android:layout_width="fill_parent" android:layout_height="30dip">

		<ImageView style="@style/email_style_bullets1" />

		<TextView style="@style/email_style_text1" android:id="@+id/id"
			android:layout_height="wrap_content" android:text="时   间 ："
			android:layout_width="65dip" />

		<TextView style="@style/email_style_text2" android:text=""
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:id="@+id/textViewTime" />
	</LinearLayout>


	<LinearLayout android:layout_marginTop="5dip" android:paddingLeft="5dip" android:paddingRight="5dip"  android:gravity="center_horizontal"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<Button android:text="审核" android:textColor="@color/white"
			android:layout_weight="1" android:layout_width="fill_parent"
			android:layout_height="30dip" android:background="#ff8604"
			android:id="@+id/buttonVerify" android:layout_marginRight="5dip" />

		<Button android:text="否决" android:textColor="@color/white"
			android:layout_weight="1" android:background="#555555"
			android:layout_height="30dip" android:layout_width="fill_parent"
			android:id="@+id/buttonOverrule" android:layout_marginRight="5dip" />

		<Button android:text="返回" android:textColor="@color/white"
			android:layout_weight="1" android:background="#1999da"
			android:layout_height="30dip" android:layout_width="fill_parent"
			android:id="@+id/buttonCancel" />

	</LinearLayout>


	<LinearLayout android:layout_width="fill_parent"
		android:layout_marginTop="10dip" android:paddingLeft="5dip"
		android:background="#ebebeb" android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView android:gravity="center_vertical" android:textSize="12dip"
			android:layout_marginLeft="5dip" android:layout_height="30dp"
			android:layout_width="45dip" android:textColor="#181818"
			android:text="名称" />

		<TextView android:gravity="center_vertical" android:textSize="12dip"
			android:layout_marginLeft="5dip" android:layout_height="30dp"
			android:layout_width="60dip" android:textColor="#181818"
			android:text="用户名称" />

		<TextView android:gravity="center_vertical" android:textSize="12dip"
			android:layout_marginLeft="5dip" android:layout_height="30dp"
			android:layout_width="65dip" android:textColor="#181818"
			android:text="意见" />

		<TextView android:gravity="center_vertical" android:textSize="12dip"
			android:layout_marginLeft="5dip" android:layout_height="30dp"
			android:layout_width="40dip" android:textColor="#181818"
			android:text="结果" />

		<TextView android:gravity="center_vertical" android:textSize="12dip"
			android:layout_marginLeft="5dip" android:layout_height="30dp"
			android:layout_width="60dip" android:textColor="#181818"
			android:text="处理时间" />

	</LinearLayout>
	<ListView android:id="@+id/listView1" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:divider="@null"
		android:cacheColorHint="#00000000" android:fadingEdge="none"
		android:listSelector="#00000000">
	</ListView>

</LinearLayout>  
