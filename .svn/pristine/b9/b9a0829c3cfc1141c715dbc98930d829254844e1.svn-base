<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_list"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/style_header_layout"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_title_date_wheel"
            style="@style/title_common"
            android:text="选取时间" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp" >
        
        <kankan.wheel.widget.WheelView android:id="@+id/year_wheel"
            android:layout_height="150dp"
            android:layout_width="0dp"
            android:layout_weight="1.6"
            android:visibility="gone"/>
        <kankan.wheel.widget.WheelView android:id="@+id/month_wheel"
            android:layout_height="150dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="gone"/>
        <kankan.wheel.widget.WheelView android:id="@+id/day_wheel"
            android:layout_height="150dp"
            android:layout_width="0dp"
            android:layout_weight="1.5"/>
        <kankan.wheel.widget.WheelView android:id="@+id/hour_wheel"
            android:layout_height="150dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"/>
        <kankan.wheel.widget.WheelView android:id="@+id/mins_wheel"
            android:layout_height="150dp"
            android:layout_width="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <View style="@style/style_line_horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="7dp"
        android:weightSum="2" >

        <Button
            android:id="@+id/btn_ok_date_wheel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button_blue"
            android:padding="8dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_cancel_date_wheel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button_blue"
            android:padding="8dp"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
