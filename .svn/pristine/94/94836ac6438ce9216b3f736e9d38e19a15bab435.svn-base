<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	style="@style/style_menu_grid_item_rl" >
    <TextView
        android:id="@+id/tvNewInstallCount_menu_item"
        style="@style/style_menu_badge_textview"
        android:visibility="gone"
       />

    <TextView
        android:id="@+id/tvInstall"
        style="@style/style_menu_grid_item_text"
		android:layout_below="@+id/ivListInstall"
        android:text="安装"/>

    <ImageView
        android:id="@+id/ivNewInstall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/add" 
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ivListInstall"
		style="@style/style_menu_grid_item_iv"
        android:src="@drawable/tousu" />

</RelativeLayout>