<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:boeryun="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_rad_room_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.changhui.control.BoeryunHeaderView
        android:id="@+id/header_rad_room_info"
        style="@style/style_header_layout"
        boeryun:isVisbleBackIco="true"
        boeryun:isVisbleSaveIco="true"
        boeryun:titleText="计算器" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/style_text_left_info"
                        android:text="名称" />

                    <TextView
                        android:id="@+id/tv_room_name_rad_room_info"
                        style="@style/style_text_right_info"
                        android:text="主卧" />
                </LinearLayout>

                <View style="@style/style_line_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/style_text_left_info"
                        android:text="朝向" />

                    <TextView
                        android:id="@+id/tv_room_direction_rad_room_info"
                        style="@style/style_text_right_info"
                        android:text="朝南" />
                </LinearLayout>

                <View style="@style/style_line_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/style_text_left_info"
                        android:text="长(m)" />

                    <TextView
                        android:id="@+id/tv_room_length_rad_room_info"
                        style="@style/style_text_right_info"
                        android:text="5" />
                </LinearLayout>

                <View style="@style/style_line_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <TextView
                        
                        style="@style/style_text_left_info"
                        android:text="宽(m)" />
                    <TextView
                        android:id="@+id/tv_room_width_rad_room_info"
                        style="@style/style_text_right_info"
                        android:text="5" />
                </LinearLayout>

                <View style="@style/style_line_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/style_text_left_info"
                        android:text="面积(㎡)" />

                    <TextView
                        android:id="@+id/tv_room_area_rad_room_info"
                        style="@style/style_text_right_info"
                        android:text="25" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/style_line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3" >

                <TextView
                    android:id="@+id/tv_in_rad_room_info"
                    style="@style/style_text_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_edittext_bg_yusheng"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="进水温度:\n60" />
                
                <LinearLayout style="@style/style_text_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_edittext_bg_yusheng"
                    android:layout_weight="1"
                    android:orientation="vertical">

	                <TextView
	                    style="@style/style_text_info"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:gravity="center"
	                    android:padding="8dp"
	                    android:paddingTop="8dp"
	                    android:text="所需热量(w)" />
	                <EditText
	                    android:id="@+id/et_hot_rad_room_info"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:background="@color/theme_half_press"
	                    android:gravity="center" 
	                    android:padding="8dp"
	                    android:hint="请输入" />
                    
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_out_rad_room_info"
                    style="@style/style_text_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity=""
                    android:layout_weight="1"
                    android:background="@drawable/shape_edittext_bg_yusheng"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="出水温度:\n30" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_edittext_bg_yusheng"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_choice_rad_room_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_header_half"
                    android:hint="选择产品规格"
                    android:padding="8dp"
                    android:textColor="@color/text_black"
                    android:drawableRight="@drawable/arrow_right_blue"
                    android:textSize="16sp" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_product_rad_room_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_black"
                    android:padding="8dp"
                    android:textSize="16sp" />
                
                <TextView
                    android:id="@+id/tv_hot_sum_rad_room_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_black"
                    android:padding="8dp"
                    android:gravity="right"
                    android:textSize="16sp" />
                <View style="@style/style_line_horizontal"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/style_text_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="选择片数" />

                    <com.changhui.control.BoeryunSelectCountView
                        android:id="@+id/select_count_pianshu_slt_room_info"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View style="@style/style_line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_price_rad_room_info"
                    style="@style/style_text_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="单价：0.0" />

                <TextView
                    android:id="@+id/tv_count_rad_room_info"
                    style="@style/style_text_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="组数：1" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_total_rad_room_info"
                style="@style/style_text_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="合计：0.0"
                android:textColor="@color/red"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>