<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:orientation="vertical" >

            <!-- android:background="@color/zl_back" -->

            <RelativeLayout style="@style/style_header_layout" >

                <ImageView
                    android:id="@+id/imageViewCancel_client"
                    style="@style/style_header_button"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:id="@+id/tv_title_client_list"
                    style="@style/title_common"
                    android:text="客户列表" />

                <ImageView
                    android:id="@+id/imageViewNew_client"
                    style="@style/style_header_button"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_add_menu" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:background="@color/lightgray" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_categray"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/iv_filter"
                    android:padding="5dip" />

                <EditText
                    android:id="@+id/editTextFilter"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_toRightOf="@+id/iv_categray"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="15sp" >
                </EditText>
            </RelativeLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <com.changhui.control.listview.PullToRefreshListView
                    android:id="@+id/listView_clientlist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never"
                    android:divider="#ebebeb"
                    android:dividerHeight="1dp"
                    android:fadingEdge="none"
                    android:visibility="gone" />

                <com.changhui.control.MyProgressBar
                    android:id="@+id/progress_clientlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <com.changhui.control.MyLetterListView
                    android:id="@+id/MyLetterListView_client"
                    android:layout_width="30dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:layout_marginBottom="5dip"
                    android:background="#40000000"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

    <ListView
        android:id="@+id/lv_drawer_client_list"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/bg_list"
        android:divider="@color/line_splite"
        android:dividerHeight="@dimen/height_line"
        android:listSelector="@color/theme_half_press" >
    </ListView>

</android.support.v4.widget.DrawerLayout>