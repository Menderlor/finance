<?xml version="1.0" encoding="utf-8"?>
<com.cedarhd.control.SlideMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slidemenu="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slideMenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/ll_item_tasklist"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:paddingBottom="4dp" >

            <TextView
                android:id="@+id/tv_state_tasklist"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/red" />
        </LinearLayout>

        <LinearLayout
            style="@style/style_list_item"
            android:orientation="horizontal"
            android:weightSum="1000" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="48"
                android:gravity="center" >

                <!-- 已读未读小红点 -->

                <ImageView
                    android:id="@+id/iv_dot_read_tasklist"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:src="@drawable/ico_dot_read" />
            </LinearLayout>

            <LinearLayout
                style="@style/style_list_avatar_root"
                android:layout_weight="240" >

                <com.cedarhd.control.AvartarView
                    android:id="@+id/control_avatar_tasklist"
                    style="@style/style_list_avatar" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/zmy_linear"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="640"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewTitle_tasklist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="内容"
                    android:textColor="@color/title_list"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textViewState_tasklist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="状态："
                    android:textColor="#999999"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textViewPublishName_tasklist"
                    style="@style/style_list_content_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="发布人" />

                <TextView
                    android:id="@+id/textViewContent_tasklist"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="content"
                    android:textColor="#999999"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textViewParticipant_tasklist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:text="参与人："
                    android:textColor="#999999"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/iv_clock"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/clock" />

                    <TextView
                        android:id="@+id/textViewTime_tasklist"
                        style="@style/style_list_content_text"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_toRightOf="@+id/iv_clock"
                        android:gravity="center_vertical"
                        android:text="发布日期" />

                    <TextView
                        android:id="@+id/tv_comment_count_tasklist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:paddingRight="5dp"
                        android:text="1"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="72"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/imageView_tasklist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/notice_icon01" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_delete_task_item"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        slidemenu:layout_role="secondaryMenu"
        android:background="@color/red"
        android:gravity="center"
        android:text="删 除"
        android:textColor="@color/white"
        android:textSize="20sp" />

</com.cedarhd.control.SlideMenu>