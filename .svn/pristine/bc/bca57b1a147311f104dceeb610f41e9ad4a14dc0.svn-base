<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_slt_order_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp" >
		
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/ico_order" />
        <TextView
            android:id="@+id/tv_orderno_slt_order_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
			android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="单号"
            android:textColor="@color/text_info"
            android:textSize="15sp"/>
        
        <TextView
            android:id="@+id/tv_status_slt_order_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingRight="5dp"
            android:text="已下单"
            android:textColor="@color/red"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_approval_slt_order_item"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ico_check_gray"
            android:visibility="gone" />
    </LinearLayout>

    <View style="@style/style_line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        android:orientation="horizontal"
        android:padding="8dp" >
        
        
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/ico_client_order" />
        <TextView
            android:id="@+id/tv_client_slt_order_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
			android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:text="客户名"
            android:textColor="@color/text_black"
            android:textSize="13sp" />
    </LinearLayout>

    <View style="@style/style_line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp" >

        <com.changhui.control.listview.BoeryunNoScrollListView
            android:id="@+id/lv_product_slt_order_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/line_splite"
            android:dividerHeight="0.1dp" />
    </LinearLayout>

    <View style="@style/style_line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="13dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="13dp" >

        <TextView
            android:id="@+id/tv_user_slt_order_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="店员"
            android:textColor="@color/text_black"
            android:textSize="13sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_total_slt_order_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/order_total"
            android:textColor="@color/text_black"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>