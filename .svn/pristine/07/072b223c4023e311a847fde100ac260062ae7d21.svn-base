<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:boeryun="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingTop="10dp" 
    android:paddingBottom="10dp">
    <TextView 
        android:id="@+id/tv_title_select_product_type_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/text_black"/>
	
    <com.changhui.view.TagFlowLayout 
        android:id="@+id/tagflow_select_product_type_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        boeryun:max_select="1"
        boeryun:auto_select_effect="true"/>
</LinearLayout>
