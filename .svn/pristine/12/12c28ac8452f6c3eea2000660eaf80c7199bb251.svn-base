<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_list"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/style_header_layout"
        android:layout_height="55dp" >

        <!-- 搜索文本TopBar -->

        <ImageView
            android:id="@+id/iv_back_rad_product_list"
            style="@style/style_header_button"
            android:src="@drawable/back" />

        <EditText
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@null" />

        <EditText
            android:id="@+id/et_search_rad_product_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            android:layout_toLeftOf="@+id/ll_button_rad_product_list"
            android:layout_toRightOf="@+id/iv_back_rad_product_list"
            android:background="@color/white"
            android:focusable="false"
            android:gravity="center"
            android:hint="搜索" />

        <LinearLayout
            android:id="@+id/ll_button_rad_product_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_filter_rad_product_list"
                style="@style/style_header_button"
                android:src="@drawable/topbar_search" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <com.changhui.control.listview.PullToRefreshListView
            android:id="@+id/lv_rad_product_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_bottom_rad_product_list"
            android:cacheColorHint="@android:color/transparent"
            android:divider="#ebebeb"
            android:dividerHeight="1dp"
            android:fadingEdge="none"
            android:listSelector="@android:color/transparent"
            android:visibility="gone" />

        <com.changhui.control.MyProgressBar
            android:id="@+id/progress_rad_productlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:id="@+id/ll_bottom_rad_product_list"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:background="@color/translate_black"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_shopcar_rad_order_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingTop="3dp" >

                <ImageView
                    android:id="@+id/iv_oder_img"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:padding="3dp"
                    android:src="@drawable/main_navigation_catagory" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shopcar_rad_product_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="3dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:padding="3dp"
                    android:src="@drawable/main_navigation_car" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购物车"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>