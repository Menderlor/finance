<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:boeryun="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_rad_room_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_list"
    tools:context="com.changhui.slt.RadRoomListActivity" >
	<!-- 预算房间列表 -->
    <com.changhui.control.BoeryunHeaderView 
        android:id="@+id/header_scan_code"
        style="@style/style_header_layout"
        boeryun:titleText="到货扫码"
        boeryun:titleRightText="历史记录"
        boeryun:isVisbleBackIco="true"
        boeryun:isVisbleRightText="true"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <TextView 
            android:id="@+id/tv_scan_rad_code"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
        	android:background="@color/gray"
            android:textColor="@color/text_black"
            android:text="扫描条码"/>
    </LinearLayout>
    
    
    <View style="@style/style_line_horizontal"/>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">
        <EditText
            android:id="@+id/et_code_rad_scan_code" 
            style="@style/style_edit_info_yusheng"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="14sp"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:hint="条码号"/>
        
        <TextView
            android:id="@+id/tv_client_rad_scan_code" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="14sp"
            android:text=""/>
        
        <TextView 
            android:id="@+id/tv_procuct_rad_scan_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="14sp"
            android:text=""/>
        <TextView 
            android:id="@+id/tv_total_rad_scan_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="导购奖金"/>
        <TextView 
            android:id="@+id/tv_result_rad_scan_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="扫描结果"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
        	android:background="@color/lightyellow"
            android:textColor="@color/text_black"
            android:text="更新订单状态 已到货"/>
    </LinearLayout>
</LinearLayout>
