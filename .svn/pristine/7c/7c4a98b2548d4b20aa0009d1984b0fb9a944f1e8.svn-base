<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- android:background="@color/zl_back" -->

    <RelativeLayout 
        android:id="@+id/rl_header_taglist"
        style="@style/style_header_layout" >

        <ImageView
            android:id="@+id/imageViewCancel"
            style="@style/style_header_button"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_title_tag"
            style="@style/title_common"
            android:text="考勤记录" />

        <ImageView
            android:id="@+id/imageViewNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:padding="5dip"
            android:src="@drawable/new_item"
            android:visibility="gone" />
    </RelativeLayout>

    <FrameLayout 
        android:layout_below="@+id/rl_header_taglist"
        style="@style/style_listview_root"
        android:layout_above="@+id/ll_select_user_taglist" >
        <com.changhui.control.listview.PullToRefreshListView
            android:id="@+id/listView_tagsalarylist_show"
            style="@style/style_listview" 
            android:visibility="gone"/>
        <com.changhui.control.MyProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_select_user_taglist"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <View style="@style/style_line_horizontal"/>

        <RelativeLayout
            android:id="@+id/rl_choose_taglist"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:clickable="true"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_select_user"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/select_user" />
            <TextView
                android:id="@+id/tv_select_user"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_select_user"
                android:gravity="center"
                android:text="选择员工"
                android:textSize="20dp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>