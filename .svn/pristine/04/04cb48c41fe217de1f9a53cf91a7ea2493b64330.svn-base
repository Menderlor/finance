<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="8dp"
    android:background="@drawable/login_background">
    
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="波尔云提醒您"/>
    
    <TextView 
        android:id="@+id/tv_time_alarmtask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:text="15:47"/>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/iv_complete_alarmtask"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/ico_check_gray"/>
        <TextView 
            android:id="@+id/tv_content_alarmtask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:text="任务内容"/>
    </LinearLayout>
    
    
    <FrameLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginBottom="10dp">
        
        <ImageView 
            android:id="@+id/iv_bg_alarmtask"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:background="@drawable/alarm_list"/>
        <ImageView 
            android:id="@+id/iv_cancel_alarmtask"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/ico_remind_close"/>
    </FrameLayout>

</LinearLayout>
