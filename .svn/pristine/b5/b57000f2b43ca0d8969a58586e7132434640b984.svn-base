<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >
        
    <RelativeLayout style="@style/style_header_layout" >
        <ImageView
            android:id="@+id/iv_back_clewlist"
            style="@style/style_header_button"
            android:src="@drawable/back" />

        <TextView
            style="@style/title_common"
            android:text="线索列表"/>
        
        <ImageView
            android:id="@+id/iv_filter_clewlist"
            android:layout_toLeftOf="@+id/iv_add_clewlist"
            style="@style/style_header_button"
            android:src="@drawable/ico_filter"/>
        
        <ImageView
            android:id="@+id/iv_add_clewlist"
            android:layout_alignParentRight="true"
            style="@style/style_header_button"
            android:src="@drawable/new_item" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/style_listview_root">
        <com.changhui.control.listview.PullToRefreshAndLoadMoreListView
            android:id="@+id/lv_load_clewlist"
            style="@style/style_listview"/>
    </RelativeLayout>

</LinearLayout>
