<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_menu_grid_item_rl" >

    <ImageView
        android:id="@+id/ivNewTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add"
        android:visibility="gone" />
    
    <ImageView
        android:id="@+id/ivListTasks"
        style="@style/style_menu_grid_item_iv"
        android:src="@drawable/a_icon7" />
    
    <TextView
        android:id="@+id/tvNewTaskCount"
        style="@style/style_menu_badge_textview"
       	android:visibility="invisible"/>

    <TextView
        style="@style/style_menu_grid_item_text"
        android:layout_below="@+id/ivListTasks"
        android:text="任务" />
</RelativeLayout>