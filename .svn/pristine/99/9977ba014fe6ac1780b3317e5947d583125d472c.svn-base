<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_list"
    android:orientation="vertical" >
    <RelativeLayout
        style="@style/style_header_layout"
        android:layout_height="55dp" >
        <!-- 搜索文本TopBar -->
        <ImageView
            android:id="@+id/iv_back_product_list"
            style="@style/style_header_button"
            android:src="@drawable/back" />

        <EditText
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@null"/>
       <EditText
            android:id="@+id/et_search_product_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            android:layout_toLeftOf="@+id/ll_button_product_list"
            android:layout_toRightOf="@+id/iv_back_product_list"
            android:background="@color/white"
            android:focusable="false"
            android:gravity="center"
            android:hint="搜索" />

        <LinearLayout
            android:id="@+id/ll_button_product_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_filter_product_list"
                style="@style/style_header_button"
                android:src="@drawable/topbar_search" />

            <ImageView
                android:id="@+id/iv_add_product_list"
                style="@style/style_header_button"
                android:src="@drawable/new_item"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    
    <RelativeLayout
        android:id="@+id/rl_search_history_product_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:visibility="gone" ><!-- 产品搜索历史记录 -->
        <com.changhui.control.MyFlowLayout
            android:id="@+id/flow_layout_product_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerlayout_product_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <com.changhui.control.listview.PullToRefreshListView
                android:id="@+id/lv_product_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/ll_bottom_product_list"
                android:cacheColorHint="@android:color/transparent"
                android:divider="#ebebeb"
                android:dividerHeight="1dp"
                android:fadingEdge="none"
                android:listSelector="@android:color/transparent"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_bottom_product_list"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:background="@color/translate_black"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ll_shopcar_order_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="3dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp" >

                    <ImageView
                        android:id="@+id/iv_oder_img"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:padding="3dp"
                        android:src="@drawable/main_navigation_catagory" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_shopcar_product_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="3dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:padding="3dp"
                        android:src="@drawable/main_navigation_car" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="购物车"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_add_shopcar_product_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:background="#F15353"
                    android:gravity="center"
                    android:text="加入购物车"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>

            <com.changhui.control.MyProgressBar
                android:id="@+id/progress_productlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_all_left_categray"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_menu_item_backgroud"
                android:gravity="center"
                android:padding="10dp"
                android:text="全部分类"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="180dp"
                android:layout_height="0.1dp"
                android:divider="@color/black" />

            <ListView
                android:id="@+id/lv_drawer_left_categray"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:divider="@color/black"
                android:dividerHeight="0.1dp" >
            </ListView>
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>

</LinearLayout>