<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- android:background="@color/zl_back" -->

    <RelativeLayout style="@style/style_header_layout">
        <ImageView
            android:id="@+id/imageViewCancel_feedbacklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:padding="5dip"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title"
            style="@style/title_common"
            android:text="问题反馈" />

        <ImageView
            android:id="@+id/imageViewNew_feedbacklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:padding="5dip"
            android:src="@drawable/new_item" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="@color/lightgray" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <com.cedarhd.control.MyProgressBar
            android:id="@+id/progress_feedbacklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <com.cedarhd.control.listview.PullToRefreshListView
            android:id="@+id/listView_feedbacklist"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="#ebebeb"
            android:dividerHeight="1dp"
            android:fadingEdge="none"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_week_feedbacklist"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@color/lightgray"
            android:gravity="center"
            android:text="周历"
            android:textColor="@color/zl_title"
            android:textSize="20sp" />
        
        <View 
            android:layout_width="2dp"
            android:layout_height="40dp"
             android:background="@color/white"/>
        
        <TextView
            android:id="@+id/tv_filter_feedbacklist"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@color/lightgray"
            android:gravity="center"
            android:text="过滤"
            android:textColor="@color/zl_title"
            android:textSize="20sp" />
        
        <View 
            android:layout_width="2dp"
            android:layout_height="40dp"
             android:background="@color/white"/>

        <TextView
            android:id="@+id/tv_month_feedbacklist"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@color/lightgray"
            android:gravity="center"
            android:text="月历"
            android:textColor="@color/zl_title"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>