<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    style="@style/style_list_item"
    android:orientation="vertical" >
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        
        <ImageView android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ico_scan_code"/>
        
        <TextView 
            android:id="@+id/tv_code_slt_scan_code_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:hint="条码号"/>
        
        <TextView 
       	    android:id="@+id/tv_time_slt_scan_code_item"
       	    android:layout_width="wrap_content" 
       	    android:layout_height="wrap_content"
       	    style="@style/style_text_info"
       	    android:textSize="12sp"
       	    android:gravity="right"
            android:layout_gravity="center_vertical"
       	    android:hint="时间"/>
    </LinearLayout>
    
   <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
       	<TextView 
       	    android:id="@+id/tv_type_slt_scan_code_item"
       	    android:layout_width="match_parent" 
       	    android:layout_height="wrap_content"
       	    style="@style/style_text_info"
       	    android:hint="型号"/>
   </LinearLayout>
   
   <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
       	<TextView 
       	    android:id="@+id/tv_user_slt_scan_code_item"
       	    android:layout_width="0dp"
       	    android:layout_weight="1" 
       	    android:layout_height="wrap_content"
       	    style="@style/style_text_info"
       	    android:hint="店员"/>
       	
       	<TextView 
       	    android:id="@+id/tv_total_slt_scan_code_item"
       	    android:layout_width="wrap_content" 
       	    android:layout_height="wrap_content"
       	    style="@style/style_text_info"
       	    android:gravity="right"
       	    android:layout_gravity="center_vertical"
       	    android:hint="金额"/>
   </LinearLayout>
</LinearLayout>
