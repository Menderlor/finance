<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:boeryun="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_list"
    android:orientation="vertical" >

    <com.changhui.control.BoeryunHeaderView
        android:id="@+id/header_slt_order_list"
        style="@style/style_header_layout"
        boeryun:isVisbleBackIco="true"
        boeryun:isVisbleFilterIco="false"
        boeryun:isVisbleSaveIco="false"
        boeryun:titleText="我的订单" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical" 
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="1dp">
        <com.changhui.control.BoeryunSearchView
            android:id="@+id/searchview_slt_order_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            boeryun:hintText="搜索客户、地址和电话.."/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >
        <include layout="@layout/merge_listview_old_style" />
    </LinearLayout>
</LinearLayout>