<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_client_ch_bespoke_item"
            style="@style/style_list_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户" />

        <TextView
            android:id="@+id/tv_status_client_ch_bespoke_item"
            style="@style/style_button_blue_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_product_ch_bespoke_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="产品"
        android:textColor="@color/text_info"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/little_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!--
                 <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ico_ch_client" />
            -->

            <TextView
                android:id="@+id/tv_user_ch_bespoke_item"
                style="@style/style_text_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称"
                android:textColor="@color/text_black" />

            <TextView
                style="@style/style_text_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="理财经理"
                android:textColor="@color/gray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical" >

            <!--
             <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ico_ch_total" />
            -->

            <TextView
                android:id="@+id/tv_total_ch_bespoke_item"
                style="@style/style_text_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额"
                android:textColor="@color/ch_text_orange" />
            
            <TextView
                style="@style/style_text_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约金额"
                android:textColor="@color/gray"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_add_contract_ch_bespoke_item"
        style="@style/style_button_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="录入合同"
        android:visibility="gone" />

</LinearLayout>