<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:boeryun="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout style="@style/style_header_layout" >

        <ImageView
            android:id="@+id/iv_back_add_workplan"
            style="@style/style_header_button"
            android:src="@drawable/back" />

        <TextView
            style="@style/title_common"
            android:text="新建工作计划" />

        <ImageView
            android:id="@+id/iv_save_add_workplan"
            style="@style/style_header_button"
            android:layout_alignParentRight="true"
            android:src="@drawable/check" />
    </RelativeLayout>

    <View style="@style/style_line_horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_list" >

        <LinearLayout
            android:id="@+id/ll_root_add_workplan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/task_style_ll_info"
                android:minHeight="100dp" >

                <TextView
                    style="@style/style_text_left_info"
                    android:text="内容" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:minHeight="100dp" >

                    <EditText
                        android:id="@+id/et_content_add_workplan"
                        style="@style/style_text_right_info"
                        android:hint="*"
                        android:minHeight="100dp" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/style_line_horizontal" />

            <LinearLayout style="@style/task_style_ll_info" >

                <TextView
                    style="@style/style_text_left_info"
                    android:text="执行人" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_vertical" >

                    <EditText
                        android:id="@+id/et_executor_add_workplan"
                        style="@style/style_text_right_info"
                        android:focusable="false"
                        android:hint="*" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/style_line_horizontal" />

            <LinearLayout style="@style/task_style_ll_info" >

                <TextView
                    style="@style/style_text_left_info"
                    android:text="参与人" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_vertical" >

                    <EditText
                        android:id="@+id/et_paticipant_add_workplan"
                        style="@style/style_text_right_info"
                        android:hint="*" 
                        android:focusable="false"/>
                </LinearLayout>
            </LinearLayout>

            <View style="@style/style_line_horizontal" />

            <LinearLayout style="@style/task_style_ll_info" >

                <TextView
                    style="@style/style_text_left_info"
                    android:text="开始时间" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_vertical" >

                    <com.changhui.control.BoeryunDateSelectView
                        android:id="@+id/date_starttime_add_workplan"
                        style="@style/style_text_right_info"
                        boeryun:defaultValue="true"  />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/style_line_horizontal" />

            <LinearLayout style="@style/task_style_ll_info" >

                <TextView
                    style="@style/style_text_left_info"
                    android:text="结束时间" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_vertical" >

                    <com.changhui.control.BoeryunDateSelectView
                        android:id="@+id/date_endtime_add_workplan"
                        style="@style/style_text_right_info"
                        boeryun:defaultValue="true"/>
                </LinearLayout>
            </LinearLayout>

            <View style="@style/style_line_horizontal" />

            <LinearLayout style="@style/task_style_ll_info" >

                <TextView
                    style="@style/style_text_left_info"
                    android:text="销售机会" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_vertical" >

                    <EditText
                        android:id="@+id/et_salechance_add_workplan"
                        style="@style/style_text_right_info"
                        android:inputType="number" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/style_line_horizontal" />

            <LinearLayout style="@style/task_style_ll_info" >

                <TextView
                    style="@style/style_text_left_info"
                    android:text="项目" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_vertical" >

                    <com.changhui.control.BoeryunDictSelectView
                        android:id="@+id/dictSelect_project_add_workplan"
                        style="@style/style_text_right_info"
                        boeryun:dictName="项目管理" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/style_line_horizontal" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>