<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_menu_grid_item_rl" >

    <ImageView
        android:id="@+id/ivNewFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add"
        android:visibility="gone" />
    
    <ImageView
        android:id="@+id/ivListFeedback"
        style="@style/style_menu_grid_item_iv"
        android:src="@drawable/fankui" />
    
    <TextView
        android:id="@+id/tvNewFeedbackCount"
        style="@style/style_menu_badge_textview"
        android:visibility="gone"/>

    <TextView
        style="@style/style_menu_grid_item_text"
        android:layout_below="@+id/ivListFeedback"
        android:text="反馈" />
</RelativeLayout>