<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <FrameLayout style="@style/style_listview_root" >

        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="25sp"
            android:text="数据为空" 
            android:visibility="gone"/>

        <com.cedarhd.control.listview.PullToRefreshListView
            android:id="@+id/lv_all_askform"
                style="@style/style_listview"
                android:visibility="gone" />

        <com.cedarhd.control.MyProgressBar
            android:id="@+id/pbar_askforme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>

</LinearLayout>