<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout style="@style/style_header_layout" >

        <ImageView
            android:id="@+id/imageViewCancela"
            style="@style/style_header_button"
            android:src="@drawable/ic_back"
            android:visibility="gone" />

        <TextView
            android:id="@+id/spacetitle"
            style="@style/title_common"
            android:text="分享" />

        <ImageView
            android:id="@+id/imageViewNews"
            style="@style/style_header_button"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:src="@drawable/icon_photo" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/lightgray" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <com.changhui.control.MyProgressBar
            android:id="@+id/progress_companyspacelist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <com.changhui.control.listview.PullToRefreshListView
            android:id="@+id/listView12"
            style="@style/style_listview_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

</LinearLayout>