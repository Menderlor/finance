<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/zl_back"
    android:orientation="vertical" >

    <RelativeLayout style="@style/style_header_layout" >

        <ImageView
            android:id="@+id/ivCancel_feedbackinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:padding="5dip"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_title_feedbackinfo"
            style="@style/title_common"
            android:text="问题反馈信息" />

        <ImageView
            android:id="@+id/ivSubmit_feedbackinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:padding="5dip"
            android:src="@drawable/check" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressbar_addfeedbackinfo"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="@color/lightgray" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_feedback"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_title_feedbackinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:minHeight="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" >

                    <TextView
                        style="@style/notice_style_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="标题" />

                    <EditText
                        android:id="@+id/tvTitle_feedbackinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:id="@+id/ll_feedback1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_state_feedbackinfo"
                    style="@style/task_style_ll_info"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:visibility="gone" >

                    <TextView
                        style="@style/notice_style_text2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="状态" />

                    <EditText
                        android:id="@+id/tv_state_feedbackinfo"
                        style="@style/task_style_edit_info"
                        android:layout_weight="3"
                        android:background="@null" />
                </LinearLayout>

                <View
                    android:id="@+id/view_state_feedbackinfo"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray"
                    android:visibility="gone" />

                <LinearLayout
                    style="@style/task_style_ll_info"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" >

                    <TextView
                        style="@style/notice_style_text2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="开始时间" />

                    <TextView
                        android:id="@+id/tvStartTime_feedbackinfo"
                        style="@style/task_style_text_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3"
                        android:background="@null"
                        android:clickable="true"
                        android:textColor="@color/black" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray"
                    android:visibility="gone" />

                <LinearLayout
                    style="@style/task_style_ll_info"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:visibility="gone" >

                    <TextView
                        style="@style/notice_style_text2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="结束时间" />

                    <TextView
                        android:id="@+id/tvEndTime_feedbackinfo"
                        style="@style/task_style_text_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:background="@null"
                        android:clickable="true"
                        android:textColor="@color/black" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" >

                    <TextView
                        style="@style/notice_style_text2"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="执行人" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3" >

                        <com.changhui.control.AvartarView
                            android:id="@+id/Executor_feedbackinfo"
                            android:layout_width="60dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                     android:minHeight="40dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" >

                    <TextView
                        style="@style/notice_style_text2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="参与人" />

                    <LinearLayout
                        android:id="@+id/llImgParticipant_feedbackinfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:clickable="true"
                        android:layout_weight="3" >

                    <!--    <com.changhui.control.AvartarView
                            android:id="@+id/Participant_feedbackinfo"
                            android:layout_width="60dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp" />
                            -->  

                            <EditText
                                android:id="@+id/et_Participant_feedbackinfo"
                                style="@style/task_style_edit_info"
                                android:layout_weight="1"
                                android:clickable="true"/>

                    </LinearLayout>
                </LinearLayout>

                <!-- 相关客户 -->

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray"
                    android:visibility="visible" />

                <LinearLayout
                    style="@style/task_style_ll_info"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:visibility="visible" >

                    <TextView
                        style="@style/notice_style_text2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="相关客户" />

                    <EditText
                        android:id="@+id/et_client_name_feedbackinfo"
                        style="@style/task_style_edit_info"
                        android:layout_weight="3"
                        android:background="@null"
                        android:clickable="true"
                        android:editable="true" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:minHeight="130dp"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="5dp" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/notice_style_text2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="内容" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/etContent_feedbackinfo"
                        style="?android:attr/textViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3"
                        android:background="@null"
                        android:clickable="true"
                        android:gravity="top|left"
                        android:maxLines="10"
                        android:minHeight="165dp"
                        android:scrollbars="vertical"
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp" >

                    <ImageView
                        android:id="@+id/iv_keybord2_feedbackinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:src="@drawable/chatting_keyboard_btn_normal" />

                    <Button
                        android:id="@+id/btn_speek2_feedbackinfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3"
                        android:background="@drawable/chatting_btn_bg"
                        android:text="点击说话" />
                </LinearLayout>
            </LinearLayout>

            <com.changhui.control.HorizontalScrollViewAddImage
                android:id="@+id/addImg_feedbackinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" >
            </com.changhui.control.HorizontalScrollViewAddImage>
        </LinearLayout>
    </ScrollView>

</LinearLayout>